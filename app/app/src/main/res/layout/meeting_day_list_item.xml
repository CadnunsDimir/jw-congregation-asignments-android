<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/background_list_item"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewMeetingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:hint="@string/edit_date_hint_text_PtBR"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ushers_PtBR" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_views_height"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerUsherA"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/spinner_background_color"
                android:layout_marginRight="5dp"
                android:layout_weight="50" />

            <Spinner
                android:id="@+id/spinnerUsherB"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/spinner_background_color"
                android:layout_weight="50" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/microphone_PtBR" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_views_height"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerMicA"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/spinner_background_color"
                android:layout_marginRight="5dp"
                android:layout_weight="50" />

            <Spinner
                android:id="@+id/spinnerMicB"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/spinner_background_color"
                android:layout_weight="50" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/computer_EsES" />

                <Spinner
                    android:id="@+id/spinnerComputer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_views_height"
                    android:background="@color/spinner_background_color"
                    android:layout_weight="0" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_EsES" />

                <Spinner
                    android:id="@+id/spinnerSoundSystem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_views_height"
                    android:background="@color/spinner_background_color"
                    android:layout_weight="0" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/form_views_height"
                android:layout_marginRight="5dp"
                android:text="Grupo de Limpieza" />

            <Spinner
                android:id="@+id/spinnerCleanGroup"
                android:layout_width="117dp"
                android:layout_height="@dimen/form_views_height"
                android:background="@color/spinner_background_color"
                android:entries="@array/clean_group_list"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>